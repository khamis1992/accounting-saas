# ============================================
# Development Environment Configuration
# ============================================
# This file is a template for development settings
# Copy to .env.development and update with your values
# ============================================

NODE_ENV=development
PORT=3000

# Database (local development)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/accounting_dev

# Supabase (development project)
SUPABASE_URL=https://your-dev-project.supabase.co
SUPABASE_ANON_KEY=your-dev-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-dev-service-role-key

# JWT (development - shorter expiration for testing)
JWT_SECRET=dev-jwt-secret-key-for-development-only
JWT_EXPIRATION=1h

# CORS (allow local development servers)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4200

# Redis (local development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Frontend (local development)
FRONTEND_URL=http://localhost:3000

# Logging (verbose in development)
LOG_LEVEL=debug
