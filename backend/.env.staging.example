# ============================================
# Staging Environment Configuration
# ============================================
# This file is a template for staging settings
# Copy to .env.staging and update with your values
# ============================================

NODE_ENV=staging
PORT=3000

# Database (staging instance)
DATABASE_URL=postgresql://user:password@staging-db.example.com:5432/accounting_staging

# Supabase (staging project)
SUPABASE_URL=https://your-staging-project.supabase.co
SUPABASE_ANON_KEY=your-staging-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-role-key

# JWT (staging - moderate expiration)
JWT_SECRET=your-staging-jwt-secret-minimum-32-characters
JWT_EXPIRATION=7d

# CORS (staging domains only)
CORS_ORIGINS=https://staging.example.com,https://staging-admin.example.com

# Redis (staging instance)
REDIS_HOST=staging-redis.example.com
REDIS_PORT=6379
REDIS_PASSWORD=your-staging-redis-password

# Frontend (staging URL)
FRONTEND_URL=https://staging.example.com

# Logging (info level for staging)
LOG_LEVEL=info
